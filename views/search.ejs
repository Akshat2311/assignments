<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Search</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body>
    <div class="container mt-5">
        <h1>Movie Search</h1>
        <form action="/search" method="post">
            <div class="mb-3">
                <label for="query" class="form-label">Search for Movies/Shows:</label>
                <input type="text" class="form-control" id="query" name="query">
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>

    <div>
    <!-- Movie List -->
    <% if (results && results.length> 0) { %>
        <h2 class="mt-4">Search Results:</h2>
        <div class="row">
            <% results.forEach(result=> { %>
                <div class="col-md-4 mt-4">
                    <div class="card">
                        <img src="<%= result.Poster %>" class="card-img-top" alt="<%= result.Title %> Poster">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= result.Title %> (<%= result.Year %>)
                            </h5>
                            <p class="card-text">
                                <%= result.Type %>
                            </p>
                            <button class="btn btn-success favorite-button" data-title="<%= result.Title %>"
                                data-year="<%= result.Year %>" data-poster="<%= result.Poster %>">Favorite</button>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
        <% } else if (results && results.length===0) { %>
            <p class="mt-4">No results found.</p>
            <% } %>
        </div>
    
                <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
                <script src="/js/script.js"></script>
</body>

</html>